<h1>Pose a question</h1>

<%= form_for @question, url: {action: "create"}, html: {class: "question_form"} do |f| %>

  <% if @question.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@question.errors.count, "error") %> prohibited
      this question from being posed:</h2>
    <ul>
    <% @question.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :description %><br />
  <%= f.text_area :description, size: "60x12" %>
  </p>

  <p>
  <%= f.submit "Create" %>
  </p>
<% end %>


